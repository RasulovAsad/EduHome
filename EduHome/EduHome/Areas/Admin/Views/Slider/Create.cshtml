@model SliderCreate

    <div class="card-body">
        <h4 class="card-title">Create new slider</h4>
        <form method="post" class="forms-sample">
            <div class="form-group">
                <label asp-for="@Model.Title">Title</label>
                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Body">Body</label>
                <input type="text" class="form-control" asp-for="@Model.Body" placeholder="Body">
                <span asp-validation-for="@Model.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageUrl">Image</label>
                <input type="text" class="form-control" asp-for="@Model.ImageUrl" placeholder="Image">
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-primary mr-2" value="Submit">
            <a class="btn btn-light" asp-area="admin" asp-controller="slider" asp-action="index">Cancel</a>
        </form>
    </div>